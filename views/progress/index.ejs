<%- include('../partials/header', { title: 'Progress' }) %>

<main class="container">
    <h1>Progress</h1>
    <ul class="progress-list">
        <% if (progress && progress.challenges && progress.challenges.length > 0) { %>
            <% progress.challenges.forEach(progressItem => { %>
                <li class="progress-item">
                    <h2><%= progressItem.challenge.name %></h2>
                    <p>Description: <%= progressItem.challenge.description %></p>
                    <p>Status: <%= progressItem.status %></p>
                    <a href="/challenges/<%= progressItem.challenge._id %>">View Details</a>
                    <a href="/challenges/<%= progressItem._id %>/edit">Edit</a>
                    <form action="/challenges/<%= progressItem._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn-delete">Delete</button>
                    </form>
                </li>
            <% }); %>
        <% } else { %>
            <p>No progress data available.</p>
        <% } %>
    </ul>
</main>

<%- include('../partials/footer') %>
