<% include ('../partials/header', { title: 'Edit Challenge' }) %>
<h1>Edit Challenge</h1>
<form action="/challenges/<%= challenge._id %>?_method=PUT" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= challenge.title %>">
    <br>
    <label for="category">Category:</label>
    <input type="text" id="category" name="category" value="<%= challenge.category %>">
    <br>
    <label for="tasks">Tasks:</label>
    <textarea id="tasks" name="tasks"><%= challenge.tasks.join('\n') %></textarea>
    <br>
    <button type="submit">Update Challenge</button>
<% include partials/footer %>